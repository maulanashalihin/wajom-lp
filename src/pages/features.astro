<script>
  document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('searchInput') as HTMLInputElement;
    const filterTabs = document.getElementById('filterTabs');
    const featuresGrid = document.getElementById('featuresGrid');
    const featureCards = document.querySelectorAll('.feature-card');
    
    let currentFilter = 'all';
    
    // Search functionality
    if (searchInput) {
      searchInput.addEventListener('input', function() {
        const searchTerm = this.value.toLowerCase().trim();
        filterFeatures(searchTerm, currentFilter);
      });
    }
    
    // Filter functionality
    if (filterTabs) {
      filterTabs.addEventListener('click', function(e: Event) {
        const target = e.target as HTMLElement;
        if (target && target.tagName === 'BUTTON') {
          // Update active tab
          filterTabs.querySelectorAll('button').forEach(btn => {
            btn.classList.remove('bg-blue-500', 'text-white');
            btn.classList.add('bg-gray-100', 'text-gray-700', 'hover:bg-gray-200');
          });
          
          target.classList.remove('bg-gray-100', 'text-gray-700', 'hover:bg-gray-200');
          target.classList.add('bg-blue-500', 'text-white');
          
          // Update current filter
          currentFilter = target.getAttribute('data-filter') || 'all';
          
          // Apply filter
          const searchTerm = searchInput ? searchInput.value.toLowerCase().trim() : '';
          filterFeatures(searchTerm, currentFilter);
        }
      });
    }
    
    function filterFeatures(searchTerm: string, category: string) {
      featureCards.forEach(card => {
        const cardElement = card as HTMLElement;
        const cardCategory = cardElement.getAttribute('data-category');
        const cardKeywords = cardElement.getAttribute('data-keywords')?.toLowerCase() || '';
        const cardTitle = cardElement.querySelector('h3')?.textContent?.toLowerCase() || '';
        const cardDescription = cardElement.querySelector('p')?.textContent?.toLowerCase() || '';
        
        // Check category filter
        const categoryMatch = category === 'all' || cardCategory === category;
        
        // Check search term
        const searchMatch = searchTerm === '' || 
          cardKeywords.includes(searchTerm) || 
          cardTitle.includes(searchTerm) || 
          cardDescription.includes(searchTerm);
        
        // Show/hide card
        if (categoryMatch && searchMatch) {
          cardElement.style.display = 'block';
          cardElement.style.opacity = '1';
          cardElement.style.transform = 'scale(1)';
        } else {
          cardElement.style.display = 'none';
          cardElement.style.opacity = '0';
          cardElement.style.transform = 'scale(0.95)';
        }
      });
      
      // Add animation
      if (featuresGrid) {
        featuresGrid.style.transition = 'all 0.3s ease';
      }
    }
    
    // Initialize with smooth animations
    featureCards.forEach(card => {
      const cardElement = card as HTMLElement;
      cardElement.style.transition = 'all 0.3s ease';
    });
  });
</script>

