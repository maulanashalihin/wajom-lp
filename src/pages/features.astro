---
import Layout from '../layouts/Layout.astro';
import Header from '../sections/Header.astro';
export const prerender = true; // agar halaman ini diprerender (jika static site)
---

<Layout title="Ciri-ciri - Wajom">
  <Header />
  <div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 pt-20">

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <!-- Dashboard Header -->
      <div class="mb-8">
        <h2 class="text-3xl font-bold text-gray-900 mb-2">Dashboard WhatsApp</h2>
        <p class="text-gray-600 mb-6">Kelola dan akses semua ciri WhatsApp anda di satu tempat</p>
        
        <!-- Search Section -->
        <div class="bg-white rounded-lg shadow-sm p-6 mb-6">
          <h3 class="text-xl font-semibold text-gray-900 mb-4">Mahu automasi apa hari ini?</h3>
          <div class="relative">
            <input 
              id="searchInput"
              type="text" 
              placeholder="Cari ciri yang anda inginkan" 
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            />
            <div class="absolute right-3 top-3">
              <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
            </div>
          </div>
        </div>

        <!-- Filter Tabs -->
        <div class="flex flex-wrap gap-2 mb-8" id="filterTabs">
          <button class="filter-tab px-4 py-2 bg-blue-500 text-white rounded-lg font-medium transition-all" data-filter="all">Semua</button>
          <button class="filter-tab px-4 py-2 bg-gray-100 text-gray-700 rounded-lg font-medium hover:bg-gray-200 transition-all" data-filter="ai">AI & Lanjutan</button>
          <button class="filter-tab px-4 py-2 bg-gray-100 text-gray-700 rounded-lg font-medium hover:bg-gray-200 transition-all" data-filter="automasi">Automasi</button>
          <button class="filter-tab px-4 py-2 bg-gray-100 text-gray-700 rounded-lg font-medium hover:bg-gray-200 transition-all" data-filter="kempen">Kempen</button>
          <button class="filter-tab px-4 py-2 bg-gray-100 text-gray-700 rounded-lg font-medium hover:bg-gray-200 transition-all" data-filter="pengurusan">Pengurusan</button>
          <button class="filter-tab px-4 py-2 bg-gray-100 text-gray-700 rounded-lg font-medium hover:bg-gray-200 transition-all" data-filter="keselamatan">Keselamatan & Perlindungan</button>
        </div>
      </div>

      <!-- Features Grid -->
      <div id="featuresGrid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        <!-- Add Contact -->
        <div class="feature-card bg-white rounded-lg shadow-sm p-6 hover:shadow-md transition-shadow" data-category="pengurusan" data-keywords="tambah kenalan contact senarai">
          <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Add Contact</h3>
          <p class="text-gray-600 text-sm mb-4">Tambahkan kenalan baru ke senarai</p>

        </div>

        <!-- Campaign -->
        <div class="feature-card bg-white rounded-lg shadow-sm p-6 hover:shadow-md transition-shadow" data-category="kempen" data-keywords="kempen campaign marketing broadcast">
          <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Campaign</h3>
          <p class="text-gray-600 text-sm mb-4">Buat dan kelola kempen WhatsApp</p>
        </div>

        <!-- List -->
        <div class="feature-card bg-white rounded-lg shadow-sm p-6 hover:shadow-md transition-shadow" data-category="pengurusan" data-keywords="senarai list kenalan contact manage">
          <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">List</h3>
          <p class="text-gray-600 text-sm mb-4">Kelola senarai kenalan anda</p>
        </div>

        <!-- Bot -->
        <div class="feature-card bg-white rounded-lg shadow-sm p-6 hover:shadow-md transition-shadow" data-category="automasi" data-keywords="bot automatik automation chatbot">
          <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Bot</h3>
          <p class="text-gray-600 text-sm mb-4">Buat bot automatik untuk WhatsApp</p>
        </div>

        <!-- Chat AI -->
        <div class="feature-card bg-white rounded-lg shadow-sm p-6 hover:shadow-md transition-shadow" data-category="ai" data-keywords="chat ai artificial intelligence perbualan">
          <div class="w-12 h-12 bg-indigo-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Chat AI</h3>
          <p class="text-gray-600 text-sm mb-4">Gunakan AI untuk perbualan WhatsApp</p>
        </div>

        <!-- Evergreen Campaign -->
        <div class="feature-card bg-white rounded-lg shadow-sm p-6 hover:shadow-md transition-shadow" data-category="kempen" data-keywords="kempen evergreen automatik sentiasa aktif">
          <div class="w-12 h-12 bg-emerald-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Evergreen Campaign</h3>
          <p class="text-gray-600 text-sm mb-4">Kempen automatik yang sentiasa aktif</p>
        </div>

        <!-- Loop Message -->
        <div class="feature-card bg-white rounded-lg shadow-sm p-6 hover:shadow-md transition-shadow" data-category="automasi" data-keywords="mesej gelung loop berulang terjadual">
          <div class="w-12 h-12 bg-pink-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Loop Message</h3>
          <p class="text-gray-600 text-sm mb-4">Hantar mesej berulang secara terjadual</p>
        </div>

        <!-- Daily Leads -->
        <div class="feature-card bg-white rounded-lg shadow-sm p-6 hover:shadow-md transition-shadow" data-category="pengurusan" data-keywords="leads harian daily prospek pelanggan">
          <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Daily Leads</h3>
          <p class="text-gray-600 text-sm mb-4">Kelola leads harian anda</p>
        </div>

        <!-- OTP Widget -->
        <div class="feature-card bg-white rounded-lg shadow-sm p-6 hover:shadow-md transition-shadow" data-category="keselamatan" data-keywords="otp widget keselamatan security dripsender">
          <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">OTP Widget</h3>
          <p class="text-gray-600 text-sm mb-4">OTP satu-klik dengan Wajom!</p>
        </div>

        <!-- Grab Group -->
        <div class="feature-card bg-white rounded-lg shadow-sm p-6 hover:shadow-md transition-shadow" data-category="pengurusan" data-keywords="ambil kumpulan group data whatsapp">
          <div class="w-12 h-12 bg-teal-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Grab Group</h3>
          <p class="text-gray-600 text-sm mb-4">Ambil data dari kumpulan WhatsApp</p>
        </div>

        <!-- Integration -->
        <div class="feature-card bg-white rounded-lg shadow-sm p-6 hover:shadow-md transition-shadow" data-category="automasi" data-keywords="integrasi integration platform api webhook">
          <div class="w-12 h-12 bg-cyan-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-cyan-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Integration</h3>
          <p class="text-gray-600 text-sm mb-4">Integrasi dengan pelbagai platform</p>
        </div>

        <!-- Bot Form -->
        <div class="feature-card bg-white rounded-lg shadow-sm p-6 hover:shadow-md transition-shadow" data-category="automasi" data-keywords="borang bot form builder pembina">
          <div class="w-12 h-12 bg-violet-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-violet-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Bot Form</h3>
          <p class="text-gray-600 text-sm mb-4">Pembina borang untuk bot WhatsApp</p>
        </div>

        <!-- Move/Copy List -->
        <div class="feature-card bg-white rounded-lg shadow-sm p-6 hover:shadow-md transition-shadow" data-category="pengurusan" data-keywords="pindah salin senarai move copy list">
          <div class="w-12 h-12 bg-amber-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Move/Copy List</h3>
          <p class="text-gray-600 text-sm mb-4">Pindahkan atau salin kenalan antara senarai</p>
        </div>

        <!-- Custom Label -->
        <div class="feature-card bg-white rounded-lg shadow-sm p-6 hover:shadow-md transition-shadow" data-category="pengurusan" data-keywords="label tersuai custom tag organize">
          <div class="w-12 h-12 bg-lime-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-lime-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Custom Label</h3>
          <p class="text-gray-600 text-sm mb-4">Atur label tersuai untuk WhatsApp anda</p>
        </div>

        <!-- Groups -->
        <div class="feature-card bg-white rounded-lg shadow-sm p-6 hover:shadow-md transition-shadow" data-category="pengurusan" data-keywords="kumpulan groups kelola manage whatsapp">
          <div class="w-12 h-12 bg-rose-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-rose-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Group</h3>
          <p class="text-gray-600 text-sm mb-4">Kelola kumpulan WhatsApp anda</p>
        </div>

        <!-- Queue -->
        <div class="feature-card bg-white rounded-lg shadow-sm p-6 hover:shadow-md transition-shadow" data-category="automasi" data-keywords="barisan queue mesej antrian schedule">
          <div class="w-12 h-12 bg-slate-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Queue</h3>
          <p class="text-gray-600 text-sm mb-4">Kelola barisan mesej WhatsApp</p>
        </div>

        <!-- Sequencer -->
        <div class="feature-card bg-white rounded-lg shadow-sm p-6 hover:shadow-md transition-shadow" data-category="automasi" data-keywords="sequencer urutan auto increment bot">
          <div class="w-12 h-12 bg-sky-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-sky-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Sequencer</h3>
          <p class="text-gray-600 text-sm mb-4">Kelola urutan auto-increment untuk mesej bot anda</p>
        </div>

        <!-- Spam Limiter -->
        <div class="feature-card bg-white rounded-lg shadow-sm p-6 hover:shadow-md transition-shadow" data-category="keselamatan" data-keywords="pembatas spam limiter kekerapan mesej">
          <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728L5.636 5.636m12.728 12.728L18.364 5.636M5.636 18.364l12.728-12.728"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Spam Limiter</h3>
          <p class="text-gray-600 text-sm mb-4">Batasi kekerapan mesej untuk mencegah spam</p>
        </div>

        <!-- Working Time Control -->
        <div class="feature-card bg-white rounded-lg shadow-sm p-6 hover:shadow-md transition-shadow" data-category="automasi" data-keywords="kawalan masa kerja working time control jam">
          <div class="w-12 h-12 bg-emerald-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Working Time Control</h3>
          <p class="text-gray-600 text-sm mb-4">Kawal jam kerja untuk mesej automatik</p>
        </div>

        <!-- WhatsApp Training Circle -->
        <div class="feature-card bg-white rounded-lg shadow-sm p-6 hover:shadow-md transition-shadow" data-category="keselamatan" data-keywords="bulatan latihan whatsapp training circle nombor">
          <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">WhatsApp Training Circle</h3>
          <p class="text-gray-600 text-sm mb-4">Latih nombor WhatsApp anda untuk mengurangkan kemungkinan disekat</p>
        </div>

        <!-- Instance Info -->
        <div class="feature-card bg-white rounded-lg shadow-sm p-6 hover:shadow-md transition-shadow" data-category="pengurusan" data-keywords="info instance maklumat whatsapp">
          <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Instance Info</h3>
          <p class="text-gray-600 text-sm mb-4">Lihat maklumat instance WhatsApp anda</p>
        </div>

        <!-- Human Handover -->
        <div class="feature-card bg-white rounded-lg shadow-sm p-6 hover:shadow-md transition-shadow" data-category="automasi" data-keywords="penyerahan manusia handover ejen operator">
          <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Human Handover</h3>
          <p class="text-gray-600 text-sm mb-4">Alihkan perbualan dari bot ke ejen manusia</p>
        </div>

        <!-- CS AI -->
        <div class="feature-card bg-white rounded-lg shadow-sm p-6 hover:shadow-md transition-shadow" data-category="ai" data-keywords="cs ai customer service perkhidmatan pelanggan">
          <div class="w-12 h-12 bg-indigo-100 rounded-lg flex items-center justify-center mb-4">
