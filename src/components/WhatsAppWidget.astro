<script>
	let chatPreviewTimeout: NodeJS.Timeout;
	
	// Show chat preview after 3 seconds
	setTimeout(() => {
		showChatPreview();
	}, 3000);
	
	// Auto hide after 10 seconds
	chatPreviewTimeout = setTimeout(() => {
		closeChatPreview();
	}, 13000);
	
	function showChatPreview() {
		const preview = document.getElementById('chat-preview');
		if (preview) {
			preview.classList.remove('opacity-0', 'invisible', 'translate-y-4');
			preview.classList.add('opacity-100', 'visible', 'translate-y-0');
		}
	}
	
	function closeChatPreview() {
		const preview = document.getElementById('chat-preview');
		if (preview) {
			preview.classList.add('opacity-0', 'invisible', 'translate-y-4');
			preview.classList.remove('opacity-100', 'visible', 'translate-y-0');
		}
		clearTimeout(chatPreviewTimeout);
	}
	
	// Show preview on hover
	document.getElementById('whatsapp-btn')?.addEventListener('mouseenter', () => {
		clearTimeout(chatPreviewTimeout);
		showChatPreview();
	});
	
	// Hide preview when mouse leaves widget area
	document.getElementById('whatsapp-widget')?.addEventListener('mouseleave', () => {
		chatPreviewTimeout = setTimeout(() => {
			closeChatPreview();
		}, 2000);
	});
</script>