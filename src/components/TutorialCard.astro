---
export interface Props {
  number: string;
  title: string;
  description: string;
  category: string;
  keywords: string;
  duration: string;
  bgGradient: string;
  icon: string;
  categoryLabel: string;
}

const { 
  number, 
  title, 
  description, 
  category, 
  keywords, 
  duration, 
  bgGradient, 
  icon,
  categoryLabel 
} = Astro.props;
---

<div class="tutorial-card bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1" data-category={category} data-keywords={keywords}>
  <div class="relative overflow-hidden rounded-t-xl">
    <div class={`h-48 bg-gradient-to-br ${bgGradient} flex items-center justify-center`}>
      <div class="text-white text-center">
        <div class="w-16 h-16 mx-auto mb-4" set:html={icon}></div>
        <h3 class="text-xl font-bold">Tutorial #{number}</h3>
      </div>
    </div>
    <div class="absolute top-4 right-4">
      <span class="bg-white/20 backdrop-blur text-white px-3 py-1 rounded-full text-sm font-medium">
        {categoryLabel}
      </span>
    </div>
  </div>
  <div class="p-6">
    <h3 class="text-xl font-bold text-gray-900 mb-3">{title}</h3>
    <p class="text-gray-600 text-sm mb-4">
      {description}
    </p>
    <div class="flex items-center justify-between">
      <span class="text-sm text-gray-500">
        <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        {duration}
      </span>
      <button class="text-wajom-600 hover:text-wajom-700 font-medium text-sm hover:underline">
        Lihat PDF â†’
      </button>
    </div>
  </div>
</div>